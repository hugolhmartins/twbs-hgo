template(no-model)
  require(from="jquery as _jq" type="script")
  require(from="css-loader!./confirm-dialog.css")
  div
    script(type="text/javascript").
      this.typeIcon = 'warning sign';
      this.type = this.type||'warning';
      this.colorType = 'warning';
      if(this.type === 'info'){
      	this.typeIcon = 'info circle';
        this.colorType = "primary";
      }else if(this.type === 'error'){
      	this.typeIcon = 'bug';
        this.colorType = "danger";
      }else if(this.type === 'confirm'){
      	this.typeIcon = 'Help Circle';
        this.colorType = 'success';
      }
      this.defaultModalSize = '';
      if(this.size === 'small'){
        this.defaultModalSize = 'modal-sm';
      }else if(this.size === 'large'){
        this.defaultModalSize = 'modal-lg';
      }

    .modal.fade.confirm-dialog(tabindex='-1' role='dialog')
      div(class="${'modal-dialog '+ this.defaultModalSize }" style="vertical-align: middle;" role="document")
        .modal-content
          div(class="${'modal-header bg-'+this.colorType}")
            button.close(type='button' data-dismiss='modal' aria-label='Close')
              span(aria-hidden='true') &times;
            h4.modal-title ${(this.title ? this.title : ' ')}
          content
    .hgo-modal-backdrop
    script(type='text/javascript').
      _jq('.confirm-dialog:first').modal({show:true,backdrop:true});
      _jq('.modal-backdrop').appendTo('.hgo-modal-backdrop:first');
