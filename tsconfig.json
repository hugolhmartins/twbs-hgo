{
    "compilerOptions": {
        "target": "es5"
        ,"module": "amd"
        ,"moduleResolution": "classic"
        ,"outDir": "./dist"
        ,"experimentalDecorators": true
        ,"noImplicitAny":true		
        ,"sourceMap": false        
		,"declaration": false
		,"removeComments":true
		,"noEmitHelpers":true 
		,"suppressImplicitAnyIndexErrors": true
        ,"importHelpers":true
        ,"baseUrl": "./"
        ,"lib": ["dom", "es6"]
        ,"paths": {
            "tslib" : ["node_modules/tslib/tslib.d.ts"]
            ,"event-emitter-lite":["node_modules/event-emitter-lite/dist/@types/event-emitter-lite/index.d.ts"]
            ,"moment":["node_modules/moment/moment.d.ts"]
            ,"ferrugemjs" : ["node_modules/ferrugemjs/dist/core/index.d.ts"]            
        }
    },
    "exclude": [
        "node_modules"
		,"dist"
    ],
    "compileOnSave": false
}
