{
    "compilerOptions": {
        "moduleResolution": "classic"
        ,"outDir": "./dist/amd"
        ,"experimentalDecorators": true
        ,"noImplicitAny": true          
        ,"module": "amd"
        ,"target": "es5"
        ,"sourceMap": false
        ,"declaration": true
        ,"removeComments":true
        ,"noEmitHelpers":true
        ,"suppressImplicitAnyIndexErrors": true

    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "atom": {
      "rewriteTsconfig": false
    }
}
